
@{
    ViewData["Title"] = "Form Data capture using ViewData";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Form Data capture using ViewData</h2><br/>

            <form action="/Home/ViewDataSubmit" method="post">
                <div class="row">
                    <div class="col-sm-4">Student Name: </div>
                    <div class="col-sm-8">
                        <input class="form-control" name="name" maxlength="100" />
                    </div><br/>
                    <div class="col-sm-4">Address: </div>
                    <div class="col-sm-8">
                        <input class="form-control" name="address" maxlength="100" />
                    </div><br />
                    <div class="col-sm-4">Course: </div>
                    <div class="col-sm-8">
                        <input class="form-control" name="course" maxlength="100" />
                    </div><br />
                    <div class="col-sm-4">Year of Admission: </div>
                    <div class="col-sm-8">
                        <input class="form-control" name="year" maxlength="100" />
                    </div><br />
                    <div class="col-sm-12 text-right">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
